%h1.page-header This is albums index page
.list{"ng-controller" => "AlbumsCtrl"}
  %form{'ng-submit' => 'addAlbum()', 'name' => 'addAlbumForm'}
    %input.form-control(type='text' ng-model='newAlbum.title' required)
    %input.btn.btn-default(type='submit' value='Add' ng-disabled='!addAlbumForm.$valid')
  %ul.albums
    %li.album{"ng-repeat" => "album in albums"}
      %a(href="/albums/{{album.id}}") {{album.title}} ({{album.photos_count}} photos)
      .btn.btn-xs.btn-danger(ng-click='delete($index)') Delete
